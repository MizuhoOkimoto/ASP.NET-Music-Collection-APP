@model IEnumerable<F2021A6MO.Models.ArtistBaseViewModel>

@{
    ViewBag.Title = "Artist list";
    var userAccount = new F2021A6MO.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal);
}

<h2>Artist list</h2>

<p>
    @if (userAccount.HasRoleClaim("Executive"))
    {
        @Html.ActionLink("Create New artist", "Create")
    }
    else
    {
        <span style="color:red"> *Please log in with Executive account to create a new artist*</span>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrlArtist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthOrStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src=@Html.DisplayFor(modelItem => item.UrlArtist) alt=@item.Name width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthOrStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
          
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) | 
            @Html.ActionLink("Details with media items", "DetailsWithMediaInfo", new { id = item.Id })

        </td>
        </tr>
    }

</table>

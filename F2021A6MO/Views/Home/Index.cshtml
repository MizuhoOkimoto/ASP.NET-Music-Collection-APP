@{
    ViewBag.Title = "Assignment 6 home page";
    var userAccount = new F2021A6MO.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal);
    var email = userAccount.Name != null ? userAccount.Name : "No user found";
    var password = userAccount.Principal != null ? "Password123!" : "Please enter your password when you register";
    var principal = userAccount.Principal;
    var auth = userAccount.IsAuthenticated ? "Yes" : "No";
}

<div class="jumbotron">
    <h1>Assignment 6 - mokimoto</h1>
    <p class="lead">This application manages music artists, albums, and tracks.</p>
    <p><a href="http://mokimoto-wa-web524-a6.azurewebsites.net/" target="_blank" class="btn btn-primary btn-lg">Assignment 6 on Azure</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>About this application</h2>
        <p>Includes security-aware features that we have covered recently.</p>
        <p>Role claims are defined by a design model class, and initialized during the "load data" task.</p>
        <p>This application also includes graceful error-handling. </p>
    </div>
    <div class="col-md-4">
        <h2>About authentication to use this application</h2>
        <p>Please use the emails below to login:</p>
        <ul>
            <li>Executive role : exec@example.com</li>
            <li>Coordinator role : coord@example.com</li>
            <li>Clerk role : clerk@example.com</li>
            <li>Staff role: staff@example.com</li>
            <li>Admin role : admin@example.com</li>
        </ul>
        <p>The password for all roles is : Password123!</p>
    </div>

    <div class="col-md-4">
        <h2>User Information</h2>
        <table class="text-center" border="1" style="width: 100%; height:14vh">
            <tbody>
                <tr>
                    <td>Email</td>
                    <td>@email</td>
                </tr>
                <tr>
                    <td>Password</td>
                    <td>@password</td>
                </tr>
                <tr>
                    <td>Role Claims</td>
                    @if (userAccount.RoleClaims.Count() > 0)
                    {
                        <td>
                            @foreach (var item in userAccount.RoleClaims)
                            {
                                <span>@item / </span>
                            }
                        </td>
                    }
                    else
                    {
                        <td>No Role Claim found</td>
                    }
                </tr>

            </tbody>
        </table>
    </div>
</div>